{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "client/build",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/manifest.js": {
      "memory": 256,
      "maxDuration": 5
    }
  },
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "api/manifest.js", "use": "@vercel/node" },
    { "src": "client/build/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/manifest.json", "destination": "/api/manifest.js" },
    { "source": "/(.*)", "destination": "/" }
  ]
}