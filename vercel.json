{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/assessments/tasks/(.*)",
      "dest": "/api/assessments/taskById.js?id=$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/client/build/static/$1"
    },
    {
      "src": "/(.*)\\.(.+)",
      "dest": "/client/build/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ],
  "env": {
    "CI": "false"
  }
}