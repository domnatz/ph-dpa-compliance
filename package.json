{
  "name": "phildpa-compliance",
  "version": "1.0.0",
  "description": "Philippine Data Privacy Act Compliance Application",
  "main": "dev-server.js",
  "scripts": {
    "start": "node dev-server.js",
    "dev": "nodemon dev-server.js",
    "client": "cd client && npm start",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd client && npm install && npm run build",
    "vercel-build": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": "18.x"
  }
}